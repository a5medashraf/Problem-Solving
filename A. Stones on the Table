#include <bits/stdc++.h>
using namespace std;
typedef long long ll ;
#define all(v) (v.begin(),v.end())
typedef vector<ll> vi;


int main()
{
    int n,sum=0;
    char x=' ',c=' ';
    cin>>n;
    cin>>c;
    for(ll i =0; i<n-1 ;i++){
        cin>>x;
        if(x==c){
            sum++;
        }
        c=x;

    }
    cout<<sum<<endl;
	return 0;
}
