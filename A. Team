#include <bits/stdc++.h>
using namespace std;
typedef long long ll ;
#define all(v) (v.begin(),v.end())
typedef vector<ll> vi;


int main()
{
    ll a,b,c,n,sum=0;
    cin>>n;
    for(ll i=0; i<n ;i++){
        cin>>a>>b>>c;
        if((a+b+c)>=2){sum++;}
    }
    cout<<sum<<endl;
    

	return 0;
}
